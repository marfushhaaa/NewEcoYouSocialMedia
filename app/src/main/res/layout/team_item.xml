<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:gravity="center">
            <View
                android:id="@+id/rectangle_5"
                android:layout_width="315dp"
                android:layout_height="165dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rectangle_5"
                android:elevation="9dp"
                android:gravity="center" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearl"
                android:layout_alignStart="@+id/rectangle_5"
                android:layout_alignEnd="@+id/rectangle_5"
                android:layout_alignBottom="@+id/rectangle_5"
                android:layout_marginStart="118dp"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="4dp">

                <View
                    android:id="@+id/rectangle_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/request_in_team_button"
                    android:elevation="9dp"
                    android:visibility="visible" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rectangle_5"
                android:layout_alignTop="@+id/rectangle_5"
                android:layout_alignEnd="@+id/rectangle_5"
                android:layout_marginStart="34dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/image_area"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/ic_launcher_background"
                        android:elevation="16dp" />

                    <TextView
                        android:id="@+id/team_hash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="top"
                        android:text="#team hash"
                        android:textColor="#1E5128"
                        android:textSize="9sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="top"
                        android:text="team name"
                        android:textColor="#1E5128"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/team_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lato_light_italic"
                        android:gravity="top"
                        android:text="team bio"
                        android:textColor="#1E5128 "
                        android:textSize="9sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_places"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_7"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:text="0/0"
                            android:textColor="#1E5128 "
                            android:textSize="9sp" />

                        <View
                            android:id="@+id/group"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/team_preview_icon"
                            android:gravity="center">

                        </View>

                        <TextView
                            android:id="@+id/team_members_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="0.5dp"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="center"
                            android:text=": 0"
                            android:textColor="#1E5128 "
                            android:textSize="9sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_teamsearching"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_date_creation_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="top"
                            android:text="Дата створення:"
                            android:textColor="#1E5128 "
                            android:textSize="8sp" />

                        <TextView
                            android:id="@+id/team_date_creation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="top"
                            android:text="dd.mm.yyyy"
                            android:textColor="#1E5128 "
                            android:textSize="8sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>





</RelativeLayout>