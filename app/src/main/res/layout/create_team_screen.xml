<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/dark_green"
    android:fitsSystemWindows="true"
    android:foregroundTint="@color/dark_green">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="438dp"
        android:layout_height="845dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_69" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="47dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp">

                <ImageView
                    android:id="@+id/personImage"
                    android:layout_width="141dp"
                    android:layout_height="141dp"
                    tools:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/add_photo_icon"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="100dp"

                    app:srcCompat="@drawable/take_photo_icon" />

            </RelativeLayout>


            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/lato_regular"
                android:text="*-обов’язкові поля"
                android:textColor="#FFFFFF"
                android:textSize="12sp">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="241dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/group_76" />

                <EditText
                    android:id="@+id/editTextTeamName"
                    android:layout_width="114dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="124dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:maxLength="14"
                    android:minEms="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
                    app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                    app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                    app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                    app:layout_constraintVertical_bias="0.224" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Ім’я команди:* "
                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="302dp"
                    android:layout_height="65dp"
                    app:srcCompat="@drawable/group_77" />

                <EditText
                    android:id="@+id/editTextTeamShortBio"
                    android:layout_width="287dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:maxLength="70"
                    android:minEms="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Короткий опис:*"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:layout_marginLeft="49dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="302dp"
                    android:layout_height="116dp"
                    app:srcCompat="@drawable/group_78" />

                <EditText
                    android:id="@+id/editTextTeamBio"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="57dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:maxLength="200"
                    android:minEms="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Повний опис:*"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="241dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/group_76" />

                <EditText
                    android:id="@+id/editTextTeamHash"
                    android:layout_width="114dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="124dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:minEms="2"
                    android:maxLength="16"
                    android:hint="район/усі"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
                    app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                    app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                    app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                    app:layout_constraintVertical_bias="0.224" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Район* "

                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="241dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/group_79" />

                <EditText
                    android:id="@+id/editTextTeamMembers"
                    android:layout_width="23dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="217dp"
                    android:layout_marginTop="-1dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="number"
                    android:maxEms="15"
                    android:minEms="2"
                    android:maxLength="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Макс. кількість учасників:*"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp">

                </TextView>
            </RelativeLayout>


            <ImageView
                android:id="@+id/make_team_button"
                android:layout_width="189dp"
                android:layout_height="52dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="58dp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_3"
                app:srcCompat="@drawable/group_80" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button_team"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/back_icon"
                tools:layout_editor_absoluteX="7dp" />

            <TextView
                android:id="@+id/create_team_text"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Створити команду"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>