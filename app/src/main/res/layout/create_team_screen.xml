<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="467dp"
        android:layout_height="969dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/garden_1818234_1920_1" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="323dp"
        android:layout_height="479dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="451dp"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTeamName"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:maxEms="15"
        android:minEms="2"
        android:fontFamily="@font/lato_light"
        android:hint="Team name"
        android:inputType="textLongMessage"
        android:textColor="#BEFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_3"
        app:layout_constraintVertical_bias="0.224" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="299dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center_horizontal|top"
        android:text="Давай створимо команду!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTeamName"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTeamBio"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:minEms="10"
        android:maxEms="20"
        android:fontFamily="@font/lato_light"
        android:hint="Team bio"
        android:inputType="textLongMessage"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTeamName" />

    <EditText
        android:id="@+id/editTextTeamMembers"
        android:layout_width="241dp"
        android:layout_height="52dp"
        android:ems="10"
        android:fontFamily="@font/lato_light"
        android:hint="number of team members"
        android:inputType="number"
        android:maxEms="20"
        android:minEms="8"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTeamBio"
        app:layout_constraintVertical_bias="0.086" />

    <EditText
        android:id="@+id/editTextTeamHashtag"
        android:layout_width="232dp"
        android:layout_height="53dp"
        android:layout_marginTop="79dp"
        android:ems="10"
        android:fontFamily="@font/lato_light"
        android:hint="hashtag"
        android:inputType="textShortMessage"
        android:maxEms="15"
        android:minEms="2"
        android:textColor="#BEFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_3"
        app:layout_constraintVertical_bias="0.76" />

    <ImageView
        android:id="@+id/make_team_button"
        android:layout_width="164dp"
        android:layout_height="35dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_3"
        app:srcCompat="@drawable/sign_in" />

    <TextView
        android:id="@+id/register_button_text"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/lato_regular"
        android:gravity="center_horizontal|top"
        android:text="Make a team!"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/make_team_button"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/rectangle_3"
        app:layout_constraintTop_toTopOf="@+id/signin_button" />

</androidx.constraintlayout.widget.ConstraintLayout>