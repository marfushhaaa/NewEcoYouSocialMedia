<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="444dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="460dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shadow2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Головна сторінка"
                android:textColor="#1E5128"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_rectangle_7" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/search_block" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_group_127" />

        <ScrollView
            android:id="@+id/scroll_view_ideas"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_ecoideas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/group_130_bigger" />

            <TextView
                android:id="@+id/challenge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal|top"
                android:text="Назва гарного челенджу"
                android:textColor="#F4EEA9"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/challenge_info"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Коротка інфа про дуже хороший челендж в районі"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/challenge_name"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/challenge_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="22 учасники"
                android:textAlignment="viewStart"
                android:textColor="#F4EEA9"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintTop_toTopOf="@+id/challenge_name"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:layout_below="@+id/challenge_members"
                android:layout_alignEnd="@+id/imageView23"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ream_more_button" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="-14dp"
            app:srcCompat="@drawable/ic_group_129" />

        <ScrollView
            android:id="@+id/scroll_view_challenges"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_ecochallenges"
                    android:layout_width="match_parent"
                    android:layout_height="113dp"
                    android:orientation="horizontal" />
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/post_l"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="48dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/button_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:srcCompat="@drawable/post_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="34dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/post_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/post_image_area" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="top"
                            android:text="Дивись, лайкай, надихайся"
                            android:textColor="#1E5128"
                            android:textSize="17sp"></TextView>

                        <TextView
                            android:id="@+id/post_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/lato_regular"
                            android:gravity="bottom"
                            android:text="Дивись, які еко-справи зробили інші користувачі)"
                            android:textAlignment="viewStart"
                            android:textColor="#1E5128"
                            android:textSize="12sp">

                        </TextView>
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="-3dp"
                    android:rotation="-180"
                    app:srcCompat="@drawable/ic_back_dark_arrow_icon" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>