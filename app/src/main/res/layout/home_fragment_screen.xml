<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Головна сторінка"
                android:textColor="#1E5128"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_rectangle_7" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/search_block" />
        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_group_127" />
        <ScrollView
            android:id="@+id/scroll_view_searching_teams"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_ecoideas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_group_128" />

            <TextView
                android:id="@+id/challenge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal|top"
                android:text="Назва гарного челенджу"
                android:textColor="#F4EEA9"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/challenge_bio"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Коротка інфа про дуже хороший челендж в районі"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/challenge_name"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/challenge_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView23"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="22 учасники"
                android:textAlignment="viewStart"
                android:textColor="#F4EEA9"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/challenge_name"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:layout_below="@+id/challenge_members"
                android:layout_alignEnd="@+id/imageView23"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/ream_more_button" />
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>