<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button_post"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/ic_back_dark_arrow_icon"
                tools:layout_editor_absoluteX="7dp" />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Створення публікації"
                android:textColor="#1E5128"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="650dp"

            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="66dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/image_area_post" />
            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_add_photo_icon" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="260dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/group_125" />

            <TextView
                android:id="@+id/create_post_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Створення публікації"
                android:textColor="#1E5128"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/create_post_text"
                android:layout_width="260dp"
                android:layout_height="210dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Якийсь коротенький текст опису публікації який буде тут відображатись
в якості превью останньої публікації... Якийсь коротенький текст опису публікації який буде тут відображатись
в якості превью останньої публікації... Якийсь коротенький текст опису публікації який буде тут відображатись
в якості превью останньої публікації... "
                android:textAlignment="viewStart"
                android:textColor="#1E5128"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="256dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/group_126" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>