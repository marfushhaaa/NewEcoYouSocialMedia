<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5E08150B">

    <RelativeLayout
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="match_parent"
            android:layout_height="618dp"
            app:srcCompat="@drawable/rectangle_109" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="246dp"
            android:fontFamily="@font/lato_bold"
            android:text="TextView"
            android:textColor="@color/dark_green"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="312dp"
            android:layout_height="309dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="54dp"
            app:srcCompat="@drawable/post_big_img" />

        <LinearLayout
            android:id="@+id/l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView33"
            android:layout_alignStart="@+id/imageView33"
            android:layout_alignEnd="@+id/imageView33"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/disctrict_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/lato_bold"
                android:text="#район"
                android:textColor="@color/green"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/disctrict_creator_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="0"
                android:fontFamily="@font/lato_bold"
                android:text="#d_challenge_creator"
                android:textColor="@color/green"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/own_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="0"
                android:fontFamily="@font/lato_bold"
                android:text="#ch_hashtag"
                android:textColor="@color/green"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l"
            android:layout_alignStart="@id/imageView33"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.019">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/circle" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Як на твою думку, цей челендж приніс  користь для збереження довкілля?"
                    android:textColor="#1E5128"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/square"
                    android:buttonTint="#4E9F3D"
                    android:fontFamily="@font/lato_regular"
                    android:text="   Так (1 б.)"
                    android:textColor="#1E5128"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:button="@drawable/square"
                    android:buttonTint="#4E9F3D"
                    android:fontFamily="@font/lato_regular"
                    android:text="   Ні (0 б.)"
                    android:textColor="#1E5128"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:button="@drawable/square"
                    android:buttonTint="#4E9F3D"
                    android:fontFamily="@font/lato_regular"
                    android:text="   Не зовсім (0,5 б.)"
                    android:textColor="#1E5128"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>