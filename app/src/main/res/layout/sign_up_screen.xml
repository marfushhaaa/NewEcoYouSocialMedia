<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="@color/dark_green"
    android:fitsSystemWindows="true"
    android:foregroundTint="@color/dark_green">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="438dp"
        android:layout_height="845dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_69" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="47dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp">

                <ImageView
                    android:id="@+id/personImage"
                    android:layout_width="141dp"
                    android:layout_height="141dp"
                    tools:src="@tools:sample/avatars"
                    />

                <ImageView
                    android:id="@+id/add_photo_icon"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="100dp"

                    app:srcCompat="@drawable/take_photo_icon" />

            </RelativeLayout>


            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginBottom="13dp"
                android:text="*-обов’язкові поля"
                android:textColor="#FFFFFF"
                android:textSize="12sp">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="209dp"
                    android:layout_height="34dp"
                    app:srcCompat="@drawable/group_70_bigger" />

                <EditText
                    android:id="@+id/editTextPersonName"
                    android:layout_width="104dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="94dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Твоє ім'я"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:minEms="2"
                    android:maxLength="12"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/rectangle_3"
                    app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                    app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                    app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                    app:layout_constraintVertical_bias="0.224" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Твоє ім’я:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="209dp"
                    android:layout_height="29dp"
                    app:srcCompat="@drawable/group_70_bigger" />

                <EditText
                    android:id="@+id/editTextPersonNickname"
                    android:layout_width="104dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="94dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="3dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Твій нік"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:minEms="2"
                    android:textSize="12sp"
                    android:maxLength="20"
                    android:backgroundTint="@color/dark_green"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Нікнейм:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:layout_marginLeft="49dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="302dp"
                    android:layout_height="116dp"
                    app:srcCompat="@drawable/group_72_bigger" />

                <EditText
                    android:id="@+id/editTextPersonBio"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="55dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Щось про тебе"
                    android:inputType="textPersonName"
                    android:maxEms="15"
                    android:minEms="2"
                    android:maxLength="30"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Опис:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="0dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="302dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/group_73_bigger" />

                <EditText
                    android:id="@+id/editTextPersonEmail"
                    android:layout_width="191dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="3dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Твій імейл"
                    android:inputType="textEmailAddress"
                    android:maxEms="15"
                    android:minEms="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Твій імейл:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="302dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/group_73_bigger" />

                <EditText
                    android:id="@+id/editTextPersonPassword"
                    android:layout_width="191dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="3dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Твій пароль"
                    android:inputType="textPassword"
                    android:maxEms="15"
                    android:minEms="2"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Пароль:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="302dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/group_75_bigger" />

                <EditText
                    android:id="@+id/editTextRepeatPersonPassword"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="3dp"
                    android:ems="10"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Підтверди пароль"
                    android:inputType="textPassword"
                    android:maxEms="15"
                    android:minEms="2"
                    android:backgroundTint="@color/dark_green"
                    android:textColor="@color/dark_green"
                    android:textColorHighlight="@color/dark_green"
                    android:textColorHint="#801E5128"
                    android:textColorLink="@color/dark_green"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.76" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/lato_regular"
                    android:text="Підтвердити пароль:*"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>
            </RelativeLayout>

            <ImageView
                android:id="@+id/signin_button"
                android:layout_width="146dp"
                android:layout_height="34dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="58dp"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toBottomOf="@+id/rectangle_3"
                app:srcCompat="@drawable/sign_up_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_marginStart="31dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/back_icon"
                tools:layout_editor_absoluteX="7dp" />

            <TextView
                android:id="@+id/some_id"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal|top"
                android:text="Створити профіль"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                app:layout_constraintEnd_toEndOf="@+id/rectangle_3"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/rectangle_3"
                app:layout_constraintTop_toTopOf="@+id/rectangle_3"
                app:layout_constraintVertical_bias="0.0" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>